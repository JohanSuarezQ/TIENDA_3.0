.Main
    min-height: calc(100vh - 100px - 60px)
    background-color: Color-claro2

body
    box-sizing: border-box
    padding: 0
    margin: 0
    font-size: 20px
    background: Color-claro2
    overflow: auto

h1
    font-family: Fuente-titulos;
    font-size: 2.2em
    margin: 0

h2, h3, h4
    font-family: Fuente-subtitulos;
    text-align: center;
    margin:0
    font-size: 1.8em
p
    font-family: Fuente-cuerpo;
    text-align: center;
    font-size: 0.9em
    margin: 5px 0

a
    text-decoration: none
    color: Color-claro1

button
    font-family: Fuente-subtitulos
    font-weight: 600
    background-color: Color-variacion 
    padding: 10px 20px
    border: none 
    color: Color-oscuro2
    border-radius: 3px
    transition: transform 100ms
    font-size: 1em
    text-transform: uppercase

button:hover
    cursor: pointer
    transform: translateY(-1px)
    box-shadow: 0px 1px 2px Color-variacion
    

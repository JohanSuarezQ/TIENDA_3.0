@media screen and (max-width:800px)
    h1.hidden
        display: none
    header
        display: grid
        justify-content: center
        justify-items: center
        align-items: center
        align-content: stretch
        grid-template-columns: 0.25fr 1fr
    .header__nav-menu
        justify-items: center
        justify-content: stretch

@media screen and (max-width: 479px)
    li.hidden
        display: none
    p.autor.hidden
        display: none
    footer 
        display: grid
        grid-template-columns: 1fr
    .rrss
        grid-column: 1
        justify-content: space-evenly
        align-items: center
        margin: 0
        padding: 10px 0 0 0
    header
        display: grid
        grid-column-gap: 0
        grid-template-columns: 0.3fr
        grid-column-gap: 15%
    .header-logo
        width: 70px
    button 
        font-size: initial
    .Main
        min-height: calc(100vh - 70px - 60px)
    body
        font-size: 15px
    .material-icons.md-36
        margin: 0
       
   
        
